.row-fluid
  %table.table.table-hover.table-condensed
    %thead
      %tr
        %th
        %th
          %h4 Ready
        %th
          %h4 Working
        %th
          %h4 Review
        %th
          %h4 Pull Request
      %tbody
        - Project::NAMES.each do |github_username, real_name|
          %tr
            %th
              %h4= real_name
            %td
              = partial 'issues_summary', :locals => {:issues => assigned_items(project.ready_issues, github_username)}
            %td
              = partial 'issues_summary', :locals => {:issues => assigned_items(project.working_issues, github_username)}
            %td
              = partial 'issues_summary', :locals => {:issues => assigned_items(project.review_issues, github_username)}
            %td
              = partial 'issues_summary', :locals => {:issues => assigned_items(project.pull_requests, github_username)}
